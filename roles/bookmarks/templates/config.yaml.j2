source_directories:
  - "{{ podman_data_dir }}/karakeep*"
repositories:
    - path: '{{ remote_borg_repo_path }}'
      label: "remote"
compression: lz4
encryption_passphrase: '{{ borg_passphrase }}'
archive_name_format: 'karakeep-{hostname}-{now:%Y-%m-%d-%H%M%S}'
read_special: true
retries: 5
retry_wait: 5
keep_within: 10d
keep_daily: 5
keep_weekly: 4
keep_monthly: 3
keep_yearly: 2
sqlite_databases:
  - name: karakeep-db
    path: "{{ podman_data_dir }}/karakeep-server/db.db"
  - name: karakeep-queue
    path: "{{ podman_data_dir }}/karakeep-server/queue.db"
