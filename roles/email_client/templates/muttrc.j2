set header_cache = "~/.cache/mutt"
set message_cachedir = "~/.cache/mutt"
set mbox_type = Maildir
set hostname = "{{ personal_email_hostname }}"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set trash = "+Trash"
set record = "+Sent"
